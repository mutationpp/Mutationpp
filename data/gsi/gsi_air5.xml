<!-- This is an example on how to define the wall reactions in a catalytic wall boundary condition with gamma model. -->
<gsi_mechanism category= "catalysis" model= "gamma">

<!-- This reaction mechanism is an example where only N recombination is taken into account f -->

    <!-- 1 -->
    <reaction formula="N + N => N2">
        <gamma_const> N:0.01 </gamma_const>
    </reaction>

    <!-- 2 -->
    <reaction formula="O + O => O2">
        <gamma_const> O:0.02 </gamma_const>
    </reaction>
    
    <reaction formula="N + O => NO">
        <gamma_const> N:0.03 O:0.04 </gamma_const>
    </reaction> 

